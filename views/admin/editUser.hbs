<form class="col-6 m-5" method="POST" action="/admin/edit/{{user._id}}">

    <div class="mt-4 ">
        <label for="">Name : </label>
        <input type="text" name="name" class="ms-3" value="{{user.name}}" >
    </div>
    <div class="mt-4  d-flex ">
        <label for="email" class="col-form-label">Email : </label>
        <input name="email" type="email" class="ms-4" value="{{user.email}}"  >
    </div>
    <div class="text-center">

        <button type="submit" class="mt-5 btn btn-secondary">Update</button>
    </div>
</form>